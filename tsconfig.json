{
    "compilerOptions": {
      "sourceMap": true,
      "allowJs": true,
      "module": "commonjs",
      "target": "ES5",
      "strict": true,
      "noImplicitAny": false,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "lib": [
        "dom",
        "es2015",
        "es6"
      ],
      "skipLibCheck": true
    },
    "include": [
      "js/**/*"
    ],
    "exclude": [
      "**/*.spec.*",
      "node_modules",
    ]
  }
